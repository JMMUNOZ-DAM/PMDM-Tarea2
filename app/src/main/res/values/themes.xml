<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PMDMTarea02" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- ConfiguraciÃ³n del Splash Screen -->
        <item name="android:windowSplashScreenBackground">@color/red</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/party</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>
    </style>


    <!-- Estilo personalizado para el Snackbar -->
    <style name="SnackbarStyle" parent="Widget.Design.Snackbar">
        <item name="android:background">#FF5722</item> <!-- Fondo color naranja -->
        <item name="android:textColor">#FFFFFF</item> <!-- Texto color blanco -->
        <item name="android:fontFamily">@font/pretendo</item> <!-- Fuente personalizada -->
    </style>

    <!--Fuentes personalizadas-->
    <style name="nintendoStyle">
        <item name="android:fontFamily">@font/pretendo</item>
    </style>
    <style name="komika">
        <item name="android:fontFamily">@font/komika</item>
    </style>


    <style name="Theme.PMDMTarea02.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PMDMTarea02.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PMDMTarea02.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>